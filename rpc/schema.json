{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "types": {
      "type": "object",
      "additionalProperties": {
        "oneOf": [
          {
            "type": "string",
            "enum": ["string", "int", "float", "boolean"]
          },
          {
            "type": "object",
            "properties": {},
            "additionalProperties": {
              "type": "string"
            }
          }
        ]
      }
    },
    "endpoints": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "request": {
            "oneOf": [
              {
                "type": "object",
                "properties": {},
                "additionalProperties": {
                  "type": "string"
                }
              },
              {
                "type": "null"
              }
            ]
          },
          "response": {
            "oneOf": [
              {
                "type": "object",
                "properties": {},
                "additionalProperties": {
                  "type": "string"
                }
              },
              {
                "type": "null"
              }
            ]
          },
          "service": {
            "type": "string",
            "enum": ["typescript"]
          },
          "raw": {
            "type": "boolean",
            "default": true
          },
          "public": {
            "type": "boolean",
            "default": true
          }
        },
        "required": ["request", "response", "service"]
      }
    }
  }
}
